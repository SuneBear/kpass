*,
:after,
:before
  box-sizing: border-box

:focus
  outline: none

html,
body
  width: 100%
  height: 100%

body
  line-height: 20px
  margin: 0;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, sans-serif
  background: $gray96
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
