// Reset
*,
:after,
:before
  box-sizing: border-box

:focus
  outline: none

::-moz-selection
  background-color rgba(0, 0, 0, .2)

::selection
  background-color rgba(0, 0, 0, .2)

ul
  padding: 0
  margin: 0
  list-style: none

// Scaffolding
html
  font-size: 16px

html,
body
  width: 100%
  height: 100%

body
  line-height: qu(5)
  margin: 0
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size: 14px
  background: $gray96
  color: $black
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
