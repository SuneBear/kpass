vertical-scroll()
  &::-webkit-scrollbar
    width: 12px

  /* Track */
  &::-webkit-scrollbar-track
    border-left: 1px solid $gray65
    background: $gray85

  /* Handle */
  &::-webkit-scrollbar-thumb
    background: $gray65

horizontal-scroll()
  &::-webkit-scrollbar
    height: 12px

  &::-webkit-scrollbar-track
    background: $gray85

  &::-webkit-scrollbar-thumb
    background: $gray65

thin-scroll()
  &::-webkit-scrollbar
    width: 7px

  &::-webkit-scrollbar-track
    background-color: $gray85
    border-left: 2px solid transparent

  &::-webkit-scrollbar-thumb
    background-color: $gray65
    border-left: 2px solid transparent

  &::-webkit-scrollbar-thumb:window-inactive
    background: alpha($black, .15)

transparent-scroll()
  &::-webkit-scrollbar
    width: 8px

  &::-webkit-scrollbar-track
    background: transparent

  &::-webkit-scrollbar-thumb
    background: alpha($black, .3)
