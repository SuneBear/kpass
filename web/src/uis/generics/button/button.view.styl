@require '../../../styles/ref'

.button
  display: inline-flex
  align-items: center
  position: relative
  border: 0
  border-radius: qu(1)
  background-color: transparent
  color: $black
  cursor: pointer
  outline: 0
  transition: all 300ms

  // With icon
  > .icon
    position: relative
    top: 2px
    margin-right: qu(2)

  // Size
  &
    font-size: 14px
    line-height: 14px

  &.sizeNormal
    height: qu(10)
    min-width: qu(19)
    padding: qu(3)

  &.sizeSmall
    height: qu(7)
    min-width: qu(14)
    padding: qu(1) qu(2)

  // Status
  &.isBlock
    display: block
    width: 100%

  &.isDisabled
    cursor: not-allowed

    &,
    &:hover,
    &:active
      color: $gray65 !important
      border-color: $gray85 !important
      background-color: $gray90 !important

  // @TODO: Update loading style
  &.isLoading
    opacity: 0.7

    // > .icon
    //   animation: spin 1.6s infinite linear

  // Types
  &Primary
    background-color: $brand
    color: $white

    &:hover
      background-color: lighten($brand, 10%)

    &:active
      background-color: lighten($brand, 30%)

    &.isGhost
      background-color: transparent
      border: 1px solid $brand
      color: $brand

      &:hover
        background-color: $brand
        color: $white

      &:active
        border: 1px solid lighten($brand, 30%)
        background-color: lighten($brand, 30%)
        color: $white

  &Danger
    background-color: $red
    color: $white

    &:hover
      background-color: lighten($red, 10%)

    &:active
      background-color: lighten($red, 30%)

    &.isGhost
      background-color: transparent
      border: 1px solid $red
      color: $red

      &:hover
        background-color: $red
        color: $white

      &:active
        border: 1px solid lighten($red, 30%)
        background-color: lighten($red, 30%)
        color: $white

  &Normal
    &,
    &.isGhost
      border: 1px solid $gray80
      color: $gray50

      &:hover
        border: 1px solid $brand
        color: $brand

      &:active
        border: 1px solid lighten($brand, 30%)
        color: lighten($brand, 30%)
