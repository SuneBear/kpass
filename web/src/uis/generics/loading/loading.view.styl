@require '../../../styles/ref'

@keyframes bouncedelay
  0%, 80%, 100%
    transform: scale(0.0)

  40%
    transform: scale(1.0)

// TODO: Add a transition
.loadingWrap
  position: relative
  width: 100%
  padding: qu(5) 0

.loadingIndicator
  margin: 0 auto
  width: 80px
  text-align: center
  z-index: 2
  transition: all 418ms

  &.hideAnimated
    opacity: 0
    height: 0
    margin: 0 auto

  .loaderDot
    display: inline-block
    width: 16px
    height: 16px
    background-color: $gray65
    border-radius: 100%
    animation: bouncedelay 1.4s infinite ease-in-out
    /* Prevent first frame from flickering when animation starts */
    animation-fill-mode: both

    & + .loaderDot
      margin-left: 6px

    &:nth-child(1)
      animation-delay: -0.32s

    &:nth-child(2)
      animation-delay: -0.16s

.endPointWrapper
  text-align: center
  margin-bottom: 15px

  .endPoint
    display: inline-block
    width: 10px
    height: 10px
    margin: 0 3px
    background: $gray65
    border-radius: 50%
