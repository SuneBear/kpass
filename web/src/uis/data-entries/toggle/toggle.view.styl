@require '../../../styles/ref'

.toggle
  position: relative
  display: inline-block
  box-sizing: border-box
  height: 22px
  min-width: 44px
  line-height: 20px
  vertical-align: middle
  border-radius: 20px
  border: 1px solid $gray65
  background-color: $gray65
  cursor: pointer
  transition: all 318ms
  user-select: none

  &-inner
    color: #fff
    margin-left: 24px
    margin-right: 6px
    display: block

  &:after
    position: absolute
    width: 18px
    height: 18px
    left: 1px
    top: 1px

    border-radius: 18px
    background-color: $white
    content: " "
    cursor: pointer
    transition: all 318ms

  &:active:after
    width: 24px

  &:focus
    box-shadow: 0 0 0 2px alpha($brand, 80%)
    outline: 0

  &:focus:hover
    box-shadow: none

  &-small
    height: 14px
    min-width: 28px
    line-height: 12px

    .toggle-inner
      margin-left: 18px
      margin-right: 3px

    &:after
      width: 12px
      height: 12px
      top: 0
      left: 0.5px

    &:active:after
      width: 16px

  &-small&-checked
    &:after
      left: 100%
      margin-left: -12.5px

    .toggle-inner
      margin-left: 3px
      margin-right: 18px

  &-small:active&-checked:after
    margin-left: -16.5px

  &-checked
    border-color: $brand
    background-color: $brand

    .toggle-inner
      margin-left: 6px
      margin-right: 24px

    &:after
      left: 100%
      margin-left: -19px

    &:active:after
      margin-left: -25px

  &-disabled
    cursor: not-allowed
    background: $gray90
    border-color: $gray90

    &:after
      background: $white
      cursor: not-allowed

    .toggle-inner
      color: $gray90
