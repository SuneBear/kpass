@require '../../../../../styles/ref'

.membersListCellView
  display: flex
  justify-content: space-between
  align-items: center
  padding: qu(2) qu(5)
  min-height: 60px

  // @FIXME: Auto width of each column
  > *
    display: flex
    align-items: center

  .userInfoSection
    width: 25%
    min-width: 200px

    .avatarView
      flex: 0 0 auto
      margin-right: qu(4)

    .userName
      font-size: 16px
      text-overflow()

  .roleSection
    min-width: 60px
    color: $gray50

  .handlerSection
    width: 28%
    min-width: 200px
    justify-content: flex-end
