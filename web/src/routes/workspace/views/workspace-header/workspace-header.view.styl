@require '../../../../styles/ref'

.workspaceHeaderView
  position: relative
  z-index: 100
  display: flex
  justify-content: space-between
  align-items: center
  min-width: $layoutMinWidth
  height: $headerHeight
  background: alpha($white, 95%)
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .15)

  > *
    font-size: 16px
    line-height: $headerHeight

  .workspaceInfo
    flex: 0 0 auto
    padding: 0 qu(4)
    border-right: 1px solid $gray93
    cursor: pointer
    transition: all 218ms

    .workspaceName
      display: block
      float: left
      font-size: 18px
      max-width: 180px
      text-overflow()

    .handlerIcon
      float: right
      margin-left: qu(2)
      font-size: 12px
      color: $gray50

    &:hover
      background: $gray97

  .workspaceLogo
    display: flex
    cursor: pointer

    .defaultLogo
      opacity: 0.75

    &:hover
      .defaultLogo
        opacity: 0.9

  .workspaceUserInfo
    flex: 0 0 auto
    display: flex
    align-items: center
    padding: 0 qu(4)
    border-left: 1px solid $gray93
    cursor: pointer
    transition: all 218ms

    .infoAvatar
      margin-right: qu(3)

    .infoUsername
      max-width: 150px
      text-overflow()

    &:hover
      background: $gray97

// Popup
.workspaceSwitcherDropdown
  // @FIXME: Hack position
  left: 8px !important
  width: 320px

  .workspaceSwitcherItem
    padding-top: 14px
    padding-bottom: 14px
