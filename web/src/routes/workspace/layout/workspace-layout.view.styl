@require '../../../styles/ref'

.workspaceLayout
  $sidebarWidth = 286px
  $sidebarMinWidth = ($sidebarWidth * 0.7)
  $contentWidth = $layoutMinWidth - $sidebarWidth

  .workspaceMain
    display: flex
    align-items: flex-start
    min-width: $layoutMinWidth
    padding: qu(5)
    margin: 0 auto
    margin-bottom: qu(5)

    .workspaceSidebar
      width: $sidebarWidth
      min-width: $sidebarMinWidth
      margin-right: qu(5)
      transition: all 368ms

    .workspaceContent
      position: relative
      min-width: $contentWidth
      flex: 1
